extends ../layout/admin

block contenido
    .max-w-2xl.mx-auto
        .mb-8
            h1(class="text-4xl.font-semibold.text-purple-600.mb-2")(style="font-family: 'Playfair Display', serif;") 
                | #{espacio ? ' Editar' : ' Nuevo'} Espacio
            p.text-gray-600.font-light Completa la informaci√≥n del espacio

        .bg-white.rounded-2xl.shadow-lg.p-8.border-2.border-purple-100
            form(method="POST" class="space-y-6")
                input(type="hidden" name="_csrf" value=csrfToken)

                //- Nombre
                .relative
                    label.block.text-sm.font-medium.text-purple-700.mb-2(for="nombre") 
                        | Nombre del Espacio
                    input#nombre.w-full.px-4.py-3.border-2.border-purple-200.rounded-xl(class="focus:outline-none focus:ring-2 focus:ring-purple-400")(
                        type="text" 
                        name="nombre" 
                        value=espacio ? espacio.nombre : ''
                        placeholder="Ej: Mesa 1, VIP 3"
                        required
                    )

                //- Capacidad
                .relative
                    label.block.text-sm.font-medium.text-purple-700.mb-2(for="capacidad") 
                        | Capacidad
                    input#capacidad.w-full.px-4.py-3.border-2.border-purple-200.rounded-xl(class="focus:outline-none focus:ring-2 focus:ring-purple-400")(
                        type="number" 
                        name="capacidad" 
                        value=espacio ? espacio.capacidad : ''
                        min="1"
                        max="20"
                        required
                    )

                //- Zona
                .relative
                    label.block.text-sm.font-medium.text-purple-700.mb-2(for="zona") 
                        | Zona
                    select#zona.w-full.px-4.py-3.border-2.border-purple-200.rounded-xl(class="focus:outline-none focus:ring-2 focus:ring-purple-400")(
                        name="zona"
                        required
                    )
                        option(value="interior" selected=espacio && espacio.zona==='interior') Interior
                        option(value="terraza" selected=espacio && espacio.zona==='terraza') Terraza
                        option(value="barra" selected=espacio && espacio.zona==='barra') Barra
                        option(value="privado" selected=espacio && espacio.zona==='privado') Un lugar privado

                //- Estado
                .relative
                    label.block.text-sm.font-medium.text-purple-700.mb-2(for="estado") 
                        | Estado
                    select#estado.w-full.px-4.py-3.border-2.border-purple-200.rounded-xl(class="focus:outline-none focus:ring-2 focus:ring-purple-400")(
                        name="estado"
                    )
                        option(value="activa" selected=!espacio || espacio.estado==='activa') Activa
                        option(value="inactiva" selected=espacio && espacio.estado==='inactiva') Inactiva

                //- Botones
                .flex.gap-4
                    button(class="flex-1 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold py-3 rounded-xl transition-all duration-300 hover:shadow-xl")(type="submit") 
                        | Guardar Espacio
                    a(class="flex-1 bg-gray-300 text-gray-700 font-semibold py-3 rounded-xl text-center transition-colors hover:bg-gray-400")(href="/espacios") 
                        | Cancelar
