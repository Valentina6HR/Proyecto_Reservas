extends ../layout/admin

block contenido
    .mb-8
        .flex.justify-between.items-center
            div
                h1(class="text-4xl.font-semibold.text-purple-600.mb-2")(style="font-family: 'Playfair Display', serif;") 
                    | Gestión de Espacios
                p.text-gray-600.font-light Administra los espacios comedor
            a(class="bg-gradient-to-r from-purple-500 to-pink-500 text-white px-6 py-3 rounded-full font-semibold transition-all duration-300 hover:shadow-xl")(href="/espacios/crear") 
                | + Nuevo Espacio

    .bg-white.rounded-2xl.shadow-lg.p-6.border-2.border-purple-100
        if espacios && espacios.length > 0
            .grid.grid-cols-1.md_grid-cols-2.lg_grid-cols-3.gap-6
                each espacio in espacios
                    .bg-gradient-to-br.from-purple-50.to-pink-50.rounded-xl.p-6.border-2.border-purple-200(class="hover:shadow-lg").transition-all.duration-300
                        .flex.justify-between.items-start.mb-4
                            div
                                h3.text-xl.font-semibold.text-purple-600= espacio.nombre
                                p.text-sm.text-gray-600.capitalize Zona: #{espacio.zona}
                            span(class=espacio.estado === 'activa' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' class="px-3 py-1 rounded-full text-xs font-medium")= espacio.estado
                        .mb-4
                            p.text-gray-700 Capacidad: #{espacio.capacidad} personas
                        .flex.gap-2
                            a(class="flex-1 bg-purple-500 text-white px-4 py-2 rounded-lg text-center text-sm transition-colors id hover:bg-purple-600")(href=`/espacios/${espacio.id}/editar`) Editar
                            form.flex-1(method="POST" action=`/espacios/${espacio.id}/eliminar` onsubmit="return confirm('¿Eliminar este espacio?')")
                                input(type="hidden" name="_csrf" value=csrfToken)
                                button(class="w-full bg-red-400 text-white px-4 py-2 rounded-lg text-sm transition-colors hover:bg-red-500")(type="submit") Eliminar
        else
            p.text-gray-500.text-center.py-12 No hay espacios registrados
