extends ../layout/index
include ../mixins/errores

block contenido
    .py-10.flex.flex-col.items-center.justify-center
        //- Decorative Header
        .text-center.mb-8
            h1.text-5xl.font-serif.font-bold.text-vino.mb-2 Ristorante Tradizionale
            .h-1.w-24.bg-dorado.mx-auto.mb-4
            h2.text-2xl.font-serif.text-gray-600= tituloPagina

        if errores 
            .max-w-md.w-full.mx-auto.mb-6
                each error in errores
                    .bg-red-100.border-l-4.border-red-600.text-red-700.p-4.mb-2.shadow-sm.rounded-r(role="alert")
                        p.font-bold Error
                        p.text-sm= error.msg

        .w-full.max-w-md
            .bg-white.py-8.px-8.shadow-2xl.rounded-xl.border-t-4.border-dorado.relative.overflow-hidden
                //- Background pattern decoration (subtle)
                .absolute.top-0.right-0.w-24.h-24.bg-vino.opacity-5.rounded-bl-full.-mr-12.-mt-12.pointer-events-none

                form.space-y-6(method="post")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    
                    div
                        label.block.text-sm.font-serif.font-bold.text-gray-700.mb-2(for="password") Nueva Contraseña
                        .relative
                            .absolute.inset-y-0.left-0.pl-3.flex.items-center.pointer-events-none
                            input#password.w-full.pl-10.px-3.py-3.border.border-gray-200.rounded-lg.bg-gray-50.placeholder-gray-400.text-gray-800.focus_outline-none.focus_ring-2.focus_ring-dorado.focus_border-transparent.transition-all(placeholder="Mínimo 6 caracteres" type="password" name="password")
                            p.text-xs.text-gray-500.mt-1 Debe contener al menos 6 caracteres.
                    
                    div
                        label.block.text-sm.font-serif.font-bold.text-gray-700.mb-2(for="repeat_password") Confirmar Contraseña
                        .relative
                            .absolute.inset-y-0.left-0.pl-3.flex.items-center.pointer-events-none
                            input#repeat_password.w-full.pl-10.px-3.py-3.border.border-gray-200.rounded-lg.bg-gray-50.placeholder-gray-400.text-gray-800.focus_outline-none.focus_ring-2.focus_ring-dorado.focus_border-transparent.transition-all(placeholder="Repite tu nueva contraseña" type="password" name="repeat_password")
                    
                    button(class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded-lg text-white bg-vino hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-vino transition-all duration-300 shadow-lg transform hover:-translate-y-0.5" type="submit")
                        span.absolute.left-0.inset-y-0.flex.items-center.pl-3
                                path(fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd")
                        | Guardar Contraseña

                .text-center.mt-8.pt-6.border-t.border-gray-100
                    a.inline-flex.items-center.text-gray-500.text-sm.font-medium.transition-colors.hover_text-vino(href="/auth/login") 
                        svg.w-4.h-4.mr-2(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18")
                        | Volver al inicio de sesión
