extends ../layout/index

block contenido
    .max-w-md.mx-auto.mt-12.mb-16
        //- Contenedor principal con tema morado/pastel
        .bg-white.rounded-3xl.shadow-2xl.p-8.border-4.border-pink-200(data-aos="fade-up")
            //- Encabezado
            .text-center.mb-8
                h1(class="text-3xl.font-semibold.text-purple-600.mb-2")(style="font-family: 'Playfair Display', serif;") Crear Cuenta
                p.text-gray-600.font-light Únete a nuestra comunidad

            //- Mostrar errores si existen
            if errores
                .mb-6
                    each error in errores
                        .bg-red-50.border-l-4.border-red-400.text-red-700.p-4.rounded-lg.mb-3.shadow-sm
                            p.text-sm.font-medium= error.msg

            //- Formulario de registro
            form(method="POST" action="/acceso/nueva-cuenta" class="space-y-5")
                input(type="hidden" name="_csrf" value=csrfToken)

                //- Campo de nombre
                .relative
                    label.block.text-sm.font-medium.text-purple-700.mb-2(for="name") 
                        | Nombre
                    input#name.w-full.px-4.py-3.border-2.border-pink-200.rounded-xl(class="focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-transparent")(
                        type="text" 
                        name="name" 
                        placeholder="Tu nombre"
                        value=datosFormulario ? datosFormulario.nombre : ''
                        required
                    )

                //- Campo de email
                .relative
                    label.block.text-sm.font-medium.text-purple-700.mb-2(for="email") 
                        | Correo Electrónico
                    input#email.w-full.px-4.py-3.border-2.border-pink-200.rounded-xl(class="focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-transparent")(
                        type="email" 
                        name="email" 
                        placeholder="tu@email.com"
                        value=datosFormulario ? datosFormulario.email : ''
                        required
                    )

                //- Campo de contraseña
                .relative
                    label.block.text-sm.font-medium.text-purple-700.mb-2(for="password") 
                        | Contraseña
                    input#password.w-full.px-4.py-3.border-2.border-pink-200.rounded-xl(class="focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-transparent")(
                        type="password" 
                        name="password" 
                        placeholder="Mínimo 6 caracteres"
                        required
                    )
                    p.text-xs.text-gray-500.mt-1.font-light Debe tener al menos 6 caracteres

                //- Campo de confirmación de contraseña
                .relative
                    label.block.text-sm.font-medium.text-purple-700.mb-2(for="password_confirmation") 
                        | Confirmar Contraseña
                    input#password_confirmation.w-full.px-4.py-3.border-2.border-pink-200.rounded-xl(class="focus:outline-none focus:ring-2 focus:ring-pink-400 focus:border-transparent")(
                        type="password" 
                        name="password_confirmation" 
                        placeholder="Repite tu contraseña"
                        required
                    )

                //- Botón de submit
                button(class="w-full bg-gradient-to-r from-pink-500 to-purple-500 text-white font-semibold py-3 5 rounded-xl transition-all duration-300 transform hover:shadow-xl hover:scale-105 focus:outline-none focus:ring-4 focus:ring-pink-300")(
                    type="submit"
                ) 
                    | Crear Cuenta 

            //- Separador
            .relative.my-8
                .absolute.inset-0.flex.items-center
                    .w-full.border-t.border-pink-200
                .relative.flex.justify-center.text-sm
                    span.px-4.bg-white.text-gray-500.font-light ¿Ya tienes cuenta?

            //- Enlace a login
            .text-center
                a(class="text-purple-600 font-medium transition-colors duration-300 hover:text-purple-800 hover:underline")(href="/acceso/ingresar") 
                    | Iniciar sesión 
