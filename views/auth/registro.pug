extends ../layout/index
include ../mixins/errores
include ../mixins/formularios

block contenido
    +mostrarErrores(errores)

    .min-h-screen.flex.items-center.justify-center.py-12.px-4(style="background-color: #F2EAB20F;")
        .login-container.relative.w-full.max-w-md(data-aos="fade-up" data-aos-duration="1000")
            +decoracionesUvas()
            
            //- Marco dorado
            div(style="border: 4px solid #C7A86C; padding: 2rem; background-color: #F2EADF; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25); position: relative;")
                //- Línea interior del marco
                div(style="position: absolute; top: 0.75rem; right: 0.75rem; bottom: 0.75rem; left: 0.75rem; border: 2px solid #C7A86C; pointer-events: none;")
                
                .relative.z-10
                    //- Escudo del restaurante
                    .flex.justify-center.mb-6
                        img(src="/img/escudo_restaurante.svg" alt="Escudo Restaurante" style="width: 100px; height: 100px;")
                    
                    //- Banner de título
                    +bannerTitulo("CREA TU CUENTA")
                    
                    //- Formulario
                    form(method="POST" action="/auth/registro")
                        input(type="hidden" name="_csrf" value=csrfToken)
                        .space-y-4
                            //- Campo Nombre
                            +campoFormulario("text", "name", "Nombre Completo", datosFormulario ? datosFormulario.nombre : "")
                            
                            //- Campo correo
                            +campoFormulario("email", "email", "Correo Electrónico", datosFormulario ? datosFormulario.email : "")
                            
                            //- Campo contraseña
                            +campoFormulario("password", "password", "Contraseña")
                            
                            //- Repetir Contraseña
                            +campoFormulario("password", "password_confirmation", "Repetir Contraseña")
                            
                            //- Enlace a login
                            .text-center.mt-2
                                a.text-sm.underline(href="/auth/login" style="color: #6E1825; font-family: 'Lato', sans-serif; font-style: italic;") ¿Ya tienes cuenta? Inicia sesión
                            
                            //- Botón REGISTRARSE
                            +botonSubmit("REGÍSTRATE")
