extends ../layout/index

block contenido
    .max-w-md.mx-auto.mt-12.mb-16
        //- Contenedor principal con tema morado/pastel
        .bg-white.rounded-3xl.shadow-2xl.p-8.border-4.border-purple-200(data-aos="fade-up")
            //- Encabezado
            .text-center.mb-8
                h1(class="text-3xl.font-semibold.text-purple-600.mb-2")(style="font-family: 'Playfair Display', serif;") Recuperar Acceso
                p.text-gray-600.font-light Te enviaremos un enlace para restablecer tu contraseña

            //- Mostrar errores si existen
            if errores
                .mb-6
                    each error in errores
                        .bg-red-50.border-l-4.border-red-400.text-red-700.p-4.rounded-lg.mb-3.shadow-sm
                            p.text-sm.font-medium= error.msg

            //- Formulario de recuperación
            form(method="POST" action="/acceso/recuperar-acceso" class="space-y-6")
                input(type="hidden" name="_csrf" value=csrfToken)

                //- Campo de email
                .relative
                    label.block.text-sm.font-medium.text-purple-700.mb-2(for="email") 
                        | Correo Electrónico
                    input#email.w-full.px-4.py-3.border-2.border-purple-200.rounded-xl(class="focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent")(
                        type="email" 
                        name="email" 
                        placeholder="tu@email.com"
                        required
                    )
                    p.text-xs.text-gray-500.mt-2.font-light Ingresa el email con el que te registraste

                //- Botón de submit
                button(class="w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold py-3 5 rounded-xl transition-all duration-300 transform hover:shadow-xl hover:scale-105 focus:outline-none focus:ring-4 focus:ring-purple-300")(
                    type="submit"
                ) 
                    | Enviar Enlace de Recuperación 

            //- Separador
            .relative.my-8
                .absolute.inset-0.flex.items-center
                    .w-full.border-t.border-purple-200
                .relative.flex.justify-center.text-sm
                    span.px-4.bg-white.text-gray-500.font-light ¿Recordaste tu contraseña?

            //- Enlaces de navegación
            .flex.justify-center.gap-4
                a(class="text-purple-600 font-medium transition-colors duration-300 hover:text-purple-800 hover:underline")(href="/acceso/ingresar") 
                    | Iniciar sesión
                span.text-gray-400 |
                a(class="text-purple-600 font-medium transition-colors duration-300 hover:text-purple-800 hover:underline")(href="/acceso/nueva-cuenta") 
                    | Crear cuenta
