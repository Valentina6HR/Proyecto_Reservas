extends ../layout/index
include ../mixins/errores

block contenido
    .py-10.flex.flex-col.items-center.justify-center
        //- Decorative Header
        .text-center.mb-8
            h1.text-5xl.font-serif.font-bold.text-vino.mb-2 Ristorante Tradizionale
            .h-1.w-24.bg-dorado.mx-auto.mb-4
            h2.text-2xl.font-serif.text-gray-600= tituloPagina

        if errores 
            .max-w-md.w-full.mx-auto.mb-6
                each error in errores
                    .bg-red-100.border-l-4.border-red-600.text-red-700.p-4.mb-2.shadow-sm.rounded-r(role="alert")
                        p.font-bold Error
                        p.text-sm= error.msg

        .w-full.max-w-md
            .bg-white.py-8.px-8.shadow-2xl.rounded-xl.border-t-4.border-dorado.relative.overflow-hidden
                //- Background pattern decoration (subtle)
                .absolute.top-0.right-0.w-24.h-24.bg-vino.opacity-5.rounded-bl-full.-mr-12.-mt-12.pointer-events-none

                form.space-y-6(action="/auth/olvide-password", method="post")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    
                    div 
                        label.block.text-sm.font-serif.font-bold.text-gray-700.mb-2(for="email") Email de Registro
                        .relative
                            .absolute.inset-y-0.left-0.pl-3.flex.items-center.pointer-events-none
                                    path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z")
                            input#email.w-full.pl-10.px-3.py-3.border.border-gray-200.rounded-lg.bg-gray-50.placeholder-gray-400.text-gray-800.focus_outline-none.focus_ring-2.focus_ring-dorado.focus_border-transparent.transition-all(placeholder="Escribe tu email" type="email" name="email")
                    
                    div.flex.items-center.justify-between.mt-5.text-sm
                        a.text-gray-500.transition-colors.hover_text-vino(href="/auth/registro") ¿No tienes cuenta? Registro
                        a.text-gray-500.transition-colors.hover_text-vino(href="/auth/login") Inicia Sesión

                    button(class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded-lg text-white bg-vino hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-vino transition-all duration-300 shadow-lg transform hover:-translate-y-0.5" type="submit")
                        span.absolute.left-0.inset-y-0.flex.items-center.pl-3
                                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8")
                        | Enviar Instrucciones
