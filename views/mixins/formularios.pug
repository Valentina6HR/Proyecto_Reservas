//- Mixin para campos de formulario con tema morado/pastel
mixin campoTexto(nombre, etiqueta, tipo='text', placeholder='', valor='', requerido=true, icono='')
    .relative
        label.block.text-sm.font-medium.text-purple-700.mb-2(for=nombre)
            if icono
                span.mr-1= icono
            = etiqueta
        input(
            id=nombre
            type=tipo
            name=nombre
            placeholder=placeholder
            value=valor
            required=requerido
            class="w-full px-4 py-3 border-2 border-purple-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300 bg-purple-50 text-gray-800"
        )

//- Mixin para campos de selección
mixin campoSelect(nombre, etiqueta, opciones, valorSeleccionado='', requerido=true, icono='')
    .relative
        label.block.text-sm.font-medium.text-purple-700.mb-2(for=nombre)
            if icono
                span.mr-1= icono
            = etiqueta
        select(
            id=nombre
            name=nombre
            required=requerido
            class="w-full px-4 py-3 border-2 border-purple-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300 bg-purple-50 text-gray-800"
        )
            each opcion in opciones
                option(value=opcion.valor selected=(opcion.valor === valorSeleccionado))= opcion.texto

//- Mixin para área de texto
mixin campoTextarea(nombre, etiqueta, placeholder='', valor='', filas=3, requerido=false, icono='')
    .relative
        label.block.text-sm.font-medium.text-purple-700.mb-2(for=nombre)
            if icono
                span.mr-1= icono
            = etiqueta
        textarea(
            id=nombre
            name=nombre
            placeholder=placeholder
            rows=filas
            required=requerido
            class="w-full px-4 py-3 border-2 border-purple-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-purple-400 focus:border-transparent transition-all duration-300 bg-purple-50 text-gray-800 resize-none"
        )= valor

//- Mixin para botón de submit
mixin botonSubmit(texto, colorGradiente='from-purple-500 to-pink-500')
    button(
        type="submit"
        class=`w-full bg-gradient-to-r ${colorGradiente} text-white font-semibold py-3.5 rounded-xl hover:shadow-xl hover:scale-105 transition-all duration-300 transform focus:outline-none focus:ring-4 focus:ring-purple-300`
    )= texto
