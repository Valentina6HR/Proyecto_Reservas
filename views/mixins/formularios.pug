//- Mixin para decoraciones de uvas
mixin decoracionesUvas()
    //- Decoración de uvas superior derecha
    .absolute.top-0.right-0.transform.translate-x-4.-translate-y-4
        svg(width="120" height="120" viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg")
            //- Racimo de uvas decorativo
            path(d="M80 20 Q 90 15, 100 20 L 110 30 Q 115 40, 110 50" stroke="#C7A86C" stroke-width="2" fill="none")
            circle(cx="85" cy="25" r="4" fill="#6E1825")
            circle(cx="90" cy="30" r="4" fill="#6E1825")
            circle(cx="95" cy="28" r="4" fill="#6E1825")
            circle(cx="88" cy="35" r="4" fill="#6E1825")
            circle(cx="93" cy="37" r="4" fill="#6E1825")
            path(d="M95 20 Q 100 18, 105 22 L 108 25" stroke="#7D8C5A" stroke-width="1.5" fill="none")
            path(d="M98 22 L 102 18 L 106 20 L 104 24 Z" fill="#7D8C5A")
    
    //- Decoración de uvas inferior izquierda
    .absolute.bottom-0.left-0.transform.-translate-x-4.translate-y-4
        svg(width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg")
            //- Espirales decorativas
            path(d="M 20 80 Q 25 75, 30 80 Q 35 85, 30 90" stroke="#C7A86C" stroke-width="2" fill="none")
            path(d="M 30 70 Q 35 65, 40 70 Q 45 75, 40 80" stroke="#C7A86C" stroke-width="2" fill="none")
            path(d="M 40 60 Q 45 55, 50 60 Q 55 65, 50 70" stroke="#C7A86C" stroke-width="2" fill="none")

//- Mixin para el banner de título
mixin bannerTitulo(texto)
    .flex.justify-center.mb-6
        .relative.inline-block
            svg(width="300" height="60" viewBox="0 0 300 60" xmlns="http://www.w3.org/2000/svg")
                //- Forma de banner con ribbon
                path(d="M 20 10 L 280 10 L 290 30 L 280 50 L 20 50 L 10 30 Z" fill="#6E1825")
                path(d="M 20 10 L 10 0 L 10 30 Z" fill="#4A0F18")
                path(d="M 280 10 L 290 0 L 290 30 Z" fill="#4A0F18")
                path(d="M 20 50 L 10 60 L 10 30 Z" fill="#8B2030")
                path(d="M 280 50 L 290 60 L 290 30 Z" fill="#8B2030")
                text(x="150" y="38" text-anchor="middle" fill="#F2EADF" font-family="Playfair Display, serif" font-size="24" font-weight="bold" font-style="italic")= texto

//- Mixin para campo de formulario
mixin campoFormulario(tipo, nombre, placeholder, valor)
    .form-group
        input.w-full.px-4.py-3.bg-white.focus_outline-none.transition-colors(
            type=tipo
            name=nombre
            placeholder=placeholder
            value=valor
            style="border: 2px solid #C7A86C; color: #3C4430; font-family: 'Lato', sans-serif; font-style: italic;"
        )

//- Mixin para botón de submit
mixin botonSubmit(texto)
    .flex.justify-center.mt-6
        button.relative.px-12.py-3.text-white.font-bold.text-xl.transition-transform.hover_scale-105(
            type="submit"
            style="font-family: 'Playfair Display', serif; background: linear-gradient(to bottom, #8B2030 0%, #6E1825 50%, #4A0F18 100%); border-radius: 40px; box-shadow: 0 4px 6px rgba(0,0,0,0.3);"
        )
            span.relative.z-10= texto
            //- Efecto de pincelada
            div(style="position: absolute; top: 0; right: 0; bottom: 0; left: 0; opacity: 0.3; background: linear-gradient(90deg, transparent 0%, rgba(199,168,108,0.3) 50%, transparent 100%); border-radius: 40px;")
