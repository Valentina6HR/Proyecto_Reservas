//- Mixin para mostrar errores de validaci√≥n
mixin mostrarErrores(errores)
    if errores && errores.length
        .space-y-3
            each error in errores
                .bg-red-50.border-l-4.border-red-400.text-red-700.p-4.rounded-lg.shadow-sm.animate-fade-in
                    .flex.items-start.gap-3
                        svg(class="w-5.h-5.flex-shrink-0.mt-0.5 w3.org")(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z")
                        p.text-sm.font-medium= error.msg || error
