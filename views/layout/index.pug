doctype html
html(lang="es" style="overflow-x: hidden;")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Nube Brunch | #{pagina}
        link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;600&display=swap" rel="stylesheet")
        link(rel="stylesheet", href="/css/style.css")
        link(href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet")
    body.min-h-screen.bg-gradient-to-br.from-purple-50.via-pink-50.to-white.text-gray-800.font-sans(style="overflow-x: hidden; max-width: 100vw; font-family: 'Poppins', sans-serif;")
        //- Barra de navegaci贸n con tema morado/pastel
        nav.bg-gradient-to-r.from-purple-400.via-purple-300.to-pink-300.p-4.shadow-lg.relative.z-50(style="backdrop-filter: blur(10px);")
            .container.mx-auto.flex.justify-between.items-center
                a(class="text-2xl text-white font-semibold tracking-wide transition duration-300 hover:scale-105" href="/" style="font-family: 'Playfair Display', serif;") 
                    span.drop-shadow-lg Nube Brunch
                
                //- Men煤 Desktop
                div(class="hidden lg:flex items-center gap-4")
                    a(class="bg-white text-purple-600 px-6 py-2.5 rounded-full font-medium transition-all duration-300 transform hover:bg-purple-50 hover:shadow-lg hover:scale-105" href="/reservas") 
                        | Hacer Reserva
                    if usuario
                        //- Usuario autenticado
                        .flex.items-center.gap-4
                            //- Panel de Gesti贸n (admin y recepcionista)
                            if usuario.rol === "admin" || usuario.rol === "recepcionista"
                                a(class="bg-purple-500 text-white px-5 py-2.5 rounded-full font-medium transition-all duration-300 transform flex items-center gap-2 hover:bg-purple-600 hover:shadow-lg hover:scale-105" href="/gestion/panel")
                                    svg(class="w-4.h-4 w3.org")(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                                        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z")
                                        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z")
                                    | Panel
                            //- Mis Reservas
                            a(class="text-white font-medium transition-all duration-300 flex items-center gap-2 hover:text-purple-100 hover:scale-105")(href="/mis-reservas")
                                svg(class="w-5.h-5 w3.org")(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                                | Mis Reservas
                            span.text-white.font-light.text-sm Holaaa, #{usuario.nombre}
                            a(class="bg-pink-400 text-white px-5 py-2.5 rounded-full font-medium transition-all duration-300 transform hover:bg-pink-500 hover:shadow-lg hover:scale-105")(href="/acceso/salir") Salir
                    else
                        //- Usuario no autenticado
                        a(class="text-white mr-4 font-medium transition-all duration-300 hover:text-purple-100 hover:scale-105")(href="/acceso/ingresar") Ingresar
                        a(class="bg-white text-purple-600 px-5 py-2.5 rounded-full font-medium transition-all duration-300 transform hover:bg-purple-50 hover:shadow-lg hover:scale-105")(href="/acceso/nueva-cuenta") Crear Cuenta

                //- Bot贸n Hamburguesa
                button#menu-btn(class="hamburger block lg:hidden focus:outline-none text-white" type="button")
                    span(class="block w-6 h-0.5 bg-white mb-1.5 rounded transition-all duration-300")
                    span(class="block w-6 h-0.5 bg-white mb-1.5 rounded transition-all duration-300")
                    span(class="block w-6 h-0.5 bg-white rounded transition-all duration-300")

            //- Men煤 M贸vil
            div#mobile-menu(class="hidden absolute top-full left-0 w-full bg-gradient-to-br from-purple-400 to-pink-400 shadow-2xl flex-col items-center py-8 space-y-6 lg:hidden z-40 rounded-b-3xl hover:bg-purple-50")
                a(class="bg-white.text-purple-600.px-6.py-3.rounded-full.font-medium.transition-all.duration-300.w-3_4.text-center.shadow-lg")(href="/reservas")  Reservar Mesa
                if usuario
                    if usuario.rol === "admin" || usuario.rol === "recepcionista"
                        a(class="bg-purple-600 text-white px-6 py-3 rounded-full font-medium transition-all duration-300 w-3_4 text-center shadow-lg flex items-center justify-center gap-2 hover:bg-purple-700")(href="/gestion/panel")
                            svg(class="w-4.h-4 w3.org")(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z")
                                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z")
                            | Panel
                    a(class="text-white font-medium transition-all duration-300 text-lg flex items-center gap-2 hover:text-purple-100")(href="/mis-reservas")
                        svg(class="w-5.h-5 w3.org")(xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                            path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z")
                        | Mis Reservas
                    span.text-white.font-light.text-lg Hola, #{usuario.nombre}
                    a(class="bg-pink-400 text-white px-6 py-3 rounded-full font-medium transition-all duration-300 w-3_4 text-center shadow-lg hover:bg-pink-500")(href="/acceso/salir") Salir
                else
                    a(class="text-white font-medium transition-all duration-300 text-lg hover:text-purple-100")(href="/acceso/ingresar") Ingresar
                    a(class="bg-white text-purple-600 px-6 py-3 rounded-full font-medium transition-all duration-300 w-3_4 text-center shadow-lg hover:bg-purple-50")(href="/acceso/nueva-cuenta") Crear Cuenta

        //- Mensajes Flash
        if mensajes
            if mensajes.error && mensajes.error.length
                .container.mx-auto.mt-6.px-4
                    each error in mensajes.error
                        .bg-red-100.border-l-4.border-red-500.text-red-700.p-4.rounded-lg.shadow-md.mb-4.animate-fade-in(role="alert")
                            p.font-medium= error
            if mensajes.exito && mensajes.exito.length
                .container.mx-auto.mt-6.px-4
                    each exito in mensajes.exito
                        .bg-purple-100.border-l-4.border-purple-500.text-purple-700.p-4.rounded-lg.shadow-md.mb-4.animate-fade-in(role="alert")
                            p.font-medium= exito

        //- Contenido principal
        main.container.mx-auto.px-4.py-8
            block contenido

        //- Footer con tema morado/pastel
        footer.bg-gradient-to-r.from-purple-400.via-purple-300.to-pink-300.text-white.py-8.mt-16
            .container.mx-auto.text-center
                p.text-sm.font-light.mb-2 漏 #{new Date().getFullYear()} Reservas Restaurante - Todos los derechos reservados
                p.text-xs.opacity-80 Hecho con amor para una experiencia delicada y elegante

        //- Scripts
        script(src="https://unpkg.com/aos@2.3.1/dist/aos.js")
        script.
            AOS.init({
                duration: 800,
                easing: 'ease-in-out',
                once: true
            });

            // Men煤 m贸vil
            const menuBtn = document.getElementById('menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (menuBtn && mobileMenu) {
                menuBtn.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                    mobileMenu.classList.toggle('flex');
                });
            }
