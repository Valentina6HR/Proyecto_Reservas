extends ../layout/admin

block contenido
    //- Encabezado
    .mb-8
        h1(class="text-4xl.font-semibold.text-purple-600.mb-2")(style="font-family: 'Playfair Display', serif;") 
            | Dashboard
        p.text-gray-600.font-light Resumen general del sistema

    //- Tarjetas de estadÃ­sticas
    if estadisticas
        .grid.grid-cols-1.md_grid-cols-2.lg_grid-cols-3.gap-6.mb-12
            //- Total de Reservas
            .bg-gradient-to-br.from-purple-100.to-pink-100.rounded-2xl.p-6.shadow-lg.border-2.border-purple-200
                .flex.items-center.justify-between
                    div
                        p.text-sm.text-purple-600.font-medium.mb-1 Total de Reservas
                        p(class="text-3xl.font-bold.text-purple-700 totalReservas")= estadisticas.totalReservas
                    span.text-5xl 
            
            //- Reservas pendientes
            .bg-gradient-to-br.from-yellow-100.to-orange-100.rounded-2xl.p-6.shadow-lg.border-2.border-yellow-200
                .flex.items-center.justify-between
                    div
                        p.text-sm.text-yellow-700.font-medium.mb-1 Pendientes
                        p(class="text-3xl.font-bold.text-yellow-800 ReservasPendientes")= estadisticas.ReservasPendientes
                    span.text-5xl 
            
            //- Reservas confirmadas
            .bg-gradient-to-br.from-green-100.to-emerald-100.rounded-2xl.p-6.shadow-lg.border-2.border-green-200
                .flex.items-center.justify-between
                    div
                        p.text-sm.text-green-700.font-medium.mb-1 Confirmadas
                        p(class="text-3xl.font-bold.text-green-800 ReservasConfirmadas")= estadisticas.ReservasConfirmadas
                    span.text-5xl 

    //- Reservas Recientes
    .bg-white.rounded-2xl.shadow-lg.p-6.border-2.border-purple-100
        h2.text-2xl.font-semibold.text-purple-600.mb-6 Reservas Recientes
        
        if ReservasRecientes && ReservasRecientes.length > 0
            .space-y-4
                each Reserva in ReservasRecientes
                    .bg-purple-50.rounded-xl.p-4.border.border-purple-200(class="hover:shadow-md").transition-all.duration-300
                        .flex.justify-between.items-start
                            div
                                p.font-semibold.text-purple-700 Reserva ##{Reserva.id_reserva}
                                p.text-sm.text-gray-600= new Date(Reserva.fecha_reserva).toLocaleDateString('es-ES')
                                p.text-sm.text-gray-600 #{Reserva.numero_personas} personas
                            - var estadoClases = { 'pendiente': 'bg-yellow-100 text-yellow-700', 'confirmada': 'bg-green-100 text-green-700', 'cancelada': 'bg-red-100 text-red-700' }
                            span(class=`px-3 py-1 rounded-full text-xs font-medium ${estadoClases[Reserva.estado] || 'bg-gray-100 text-gray-700'}`)= Reserva.estado
        else
            p.text-gray-500.text-center.py-8 No hay Reservas Recientes
