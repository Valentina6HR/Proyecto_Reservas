extends ../layout/admin

block contenido
    .mb-8
        h1(class="text-4xl.font-semibold.text-purple-600.mb-2")(style="font-family: 'Playfair Display', serif;") 
            | Informes y Reportes
        p.text-gray-600.font-light Estadísticas del sistema

    .grid.grid-cols-1.lg_grid-cols-2.gap-6
        //- Estadísticas generales
        .bg-white.rounded-2xl.shadow-lg.p-6.border-2.border-purple-100
            h2.text-xl.font-semibold.text-purple-600.mb-4 Estadísticas Generales
            if estadisticas
                .space-y-3
                    .flex.justify-between.items-center.p-3.bg-purple-50.rounded-lg
                        span.text-gray-700 Total de Reservas
                        span.font-bold.text-purple-600= estadisticas.totalReservas
                    if estadisticas.ReservasPorEstado
                        each estado in estadisticas.ReservasPorEstado
                            .flex.justify-between.items-center.p-3.bg-purple-50.rounded-lg
                                span.text-gray-700.capitalize= estado.estado
                                span.font-bold.text-purple-600= estado.cantidad

        //- Reservas Recientes
        .bg-white.rounded-2xl.shadow-lg.p-6.border-2.border-purple-100
            h2.text-xl.font-semibold.text-purple-600.mb-4 Actividad Reciente
            if ReservasRecientes && ReservasRecientes.length > 0
                .space-y-3
                    each Reserva in ReservasRecientes.slice(0, 10)
                        .p-3.bg-purple-50.rounded-lg
                            p.text-sm.font-semibold.text-purple-700 Reserva ##{Reserva.id_reserva}
                            p.text-xs.text-gray-600= new Date(Reserva.createdAt).toLocaleString('es-ES')
            else
                p.text-gray-500.text-center.py-8 Sin actividad reciente
