extends layout/index

block contenido
    .max-w-2xl.mx-auto.mt-16.mb-16
        .bg-white.rounded-3xl.shadow-2xl.p-12.text-center.border-4(class=error ? 'border-red-300' : 'border-purple-300' data-aos="zoom-in")
            
            //- Icono según el tipo de mensaje
            if error
                .mb-6
                    span.text-8xl 
            else
                .mb-6
                    span.text-8xl 

            //- Título
            h1(class="text-3xl.font-semibold.mb-4")(class=error ? 'text-red-600' : 'text-purple-600' style="font-family: 'Playfair Display', serif;")= tituloPagina

            //- Mensaje
            p.text-lg.text-gray-700.mb-8.font-light= mensaje

            //- Botón de acción
            a.inline-block.bg-gradient-to-r(
                class=error ? 'from-red-500 to-pink-500' : 'from-purple-500 to-pink-500'
                class="text-white font-semibold px-8 py-3 rounded-full hover:shadow-xl hover:scale-110 transition-all duration-300 transform"
                href="/"
            ) Volver al Inicio
