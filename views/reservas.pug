    //- Script para detecci√≥n de dispositivo, fecha m√≠nima y horarios
    script.
        document.addEventListener('DOMContentLoaded', function() {
            // Horarios de atenci√≥n desde el servidor
            const horariosAtencion = !{horarios || '[]'};
            
            // Pol√≠ticas de reserva desde el servidor
            const politicasReserva = !{politicas || '{}'};
            
            // Nombres de d√≠as para mostrar mensajes
            const nombresDias = ['Domingo', 'Lunes', 'Martes', 'Mi√©rcoles', 'Jueves', 'Viernes', 'S√°bado'];
            
            // Detectar tipo de dispositivo
            function detectDevice() {
                const userAgent = navigator.userAgent.toLowerCase();
                const isMobile = /iphone|ipod|android.*mobile|windows phone|blackberry/.test(userAgent);
                const isTablet = /ipad|android(?!.*mobile)|tablet/.test(userAgent);
                
                if (isMobile) return 'mobile';
                if (isTablet) return 'tablet';
                return 'desktop';
            }
            
            // Establecer el dispositivo detectado
            document.getElementById('dispositivo').value = detectDevice();
            
            // Establecer fecha m√≠nima como hoy
            const fechaInput = document.getElementById('fecha_reserva');
            const horaInput = document.getElementById('hora_inicio');
            const horarioInfo = document.getElementById('horario-info');
            
            const hoy = new Date();
            const year = hoy.getFullYear();
            const month = String(hoy.getMonth() + 1).padStart(2, '0');
            const day = String(hoy.getDate()).padStart(2, '0');
            const fechaMinima = year + '-' + month + '-' + day;
            
            fechaInput.setAttribute('min', fechaMinima);
            
            // Funci√≥n para formatear hora (quitar segundos si los tiene)
            function formatearHora(hora) {
                if (!hora) return '';
                const partes = hora.split(':');
                return partes[0] + ':' + partes[1];
            }
            
            // Funci√≥n para actualizar restricciones de hora seg√∫n el d√≠a seleccionado
            function actualizarHorario() {
                const fechaSeleccionada = fechaInput.value;
                
                if (!fechaSeleccionada) {
                    horaInput.removeAttribute('min');
                    horaInput.removeAttribute('max');
                    horarioInfo.textContent = 'Selecciona una fecha para ver el horario disponible';
                    horarioInfo.className = 'text-xs text-gray-500 mt-1 italic';
                    horaInput.disabled = false;
                    return;
                }
                
                // Obtener el d√≠a de la semana (0 = Domingo, 1 = Lunes, etc.)
                const fecha = new Date(fechaSeleccionada + 'T12:00:00'); // A√±adir hora para evitar problemas de zona horaria
                const diaSemana = fecha.getDay();
                const nombreDia = nombresDias[diaSemana];
                
                // Buscar horario para ese d√≠a
                const horarioDelDia = horariosAtencion.find(h => h.dia_semana === diaSemana);
                
                if (horarioDelDia) {
                    const horaApertura = formatearHora(horarioDelDia.hora_apertura);
                    const horaCierre = formatearHora(horarioDelDia.hora_cierre);
                    
                    horaInput.setAttribute('min', horaApertura);
                    horaInput.setAttribute('max', horaCierre);
                    horaInput.disabled = false;
                    
                    horarioInfo.innerHTML = '<span class="text-green-600 font-semibold">‚úì ' + nombreDia + ':</span> Abierto de <strong>' + horaApertura + '</strong> a <strong>' + horaCierre + '</strong>';
                    horarioInfo.className = 'text-xs text-green-700 mt-1';
                    
                    // Si hay una hora seleccionada fuera del rango, limpiarla
                    if (horaInput.value) {
                        if (horaInput.value < horaApertura || horaInput.value > horaCierre) {
                            horaInput.value = '';
                        }
                    }
                } else {
                    // No hay horario configurado para ese d√≠a (restaurante cerrado)
                    horaInput.removeAttribute('min');
                    horaInput.removeAttribute('max');
                    horaInput.value = '';
                    horaInput.disabled = true;
                    
                    horarioInfo.innerHTML = '<span class="text-red-600 font-semibold">‚úó ' + nombreDia + ':</span> El restaurante est√° cerrado este d√≠a';
                    horarioInfo.className = 'text-xs text-red-600 mt-1 font-medium';
                }
            }
            
            // Actualizar horario cuando cambie la fecha
            fechaInput.addEventListener('change', actualizarHorario);
            
            // Si ya hay una fecha seleccionada (por ejemplo, al volver con errores), actualizar
            if (fechaInput.value) {
                actualizarHorario();
            }
            
            // ============ MODAL DE POL√çTICAS ============
            const modalPoliticas = document.getElementById('modal-politicas');
            const btnVerPoliticas = document.getElementById('btn-ver-politicas');
            const btnCerrarModal = document.getElementById('btn-cerrar-modal');
            const btnAceptarPoliticas = document.getElementById('btn-aceptar-politicas');
            const modalOverlay = modalPoliticas.querySelector('.modal-overlay');
            
            // Funci√≥n para mostrar el modal
            function mostrarModal() {
                modalPoliticas.classList.remove('hidden');
                modalPoliticas.classList.add('flex');
                document.body.style.overflow = 'hidden';
                
                // Actualizar valores de pol√≠ticas
                actualizarPoliticasModal();
            }
            
            // Funci√≥n para cerrar el modal
            function cerrarModal() {
                modalPoliticas.classList.add('hidden');
                modalPoliticas.classList.remove('flex');
                document.body.style.overflow = '';
            }
            
            // Funci√≥n para actualizar los valores en el modal
            function actualizarPoliticasModal() {
                if (politicasReserva) {
                    // Tiempo de cancelaci√≥n
                    const cancelacion = politicasReserva.tiempo_cancelacion_min || 60;
                    document.getElementById('politica-cancelacion').textContent = 
                        cancelacion >= 60 ? (cancelacion / 60) + ' hora(s) antes' : cancelacion + ' minutos antes';
                    
                    // Anticipaci√≥n m√≠nima
                    const anticipacion = politicasReserva.tiempo_anticipacion_horas || 1;
                    document.getElementById('politica-anticipacion').textContent = 
                        anticipacion + ' hora(s) de anticipaci√≥n';
                    
                    // M√°ximo de personas
                    const maxPersonas = politicasReserva.max_personas_por_reserva || 8;
                    document.getElementById('politica-max-personas').textContent = 
                        maxPersonas + ' personas m√°ximo';
                    
                    // Actualizar el campo de n√∫mero de personas con el m√°ximo
                    const numPersonasInput = document.getElementById('numero_personas');
                    if (numPersonasInput) {
                        numPersonasInput.setAttribute('max', maxPersonas);
                    }
                    
                    // Duraci√≥n
                    const duracion = politicasReserva.duracion_default_min || 90;
                    document.getElementById('politica-duracion').textContent = 
                        duracion >= 60 ? Math.floor(duracion / 60) + 'h ' + (duracion % 60 > 0 ? (duracion % 60) + 'min' : '') : duracion + ' minutos';
                }
            }
            
            // Event listeners para el modal
            btnVerPoliticas.addEventListener('click', mostrarModal);
            btnCerrarModal.addEventListener('click', cerrarModal);
            btnAceptarPoliticas.addEventListener('click', cerrarModal);
            modalOverlay.addEventListener('click', cerrarModal);
            
            // Cerrar con ESC
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && !modalPoliticas.classList.contains('hidden')) {
                    cerrarModal();
                }
            });
            
            // Inicializar el m√°ximo de personas basado en las pol√≠ticas
            if (politicasReserva && politicasReserva.max_personas_por_reserva) {
                const numPersonasInput = document.getElementById('numero_personas');
                if (numPersonasInput) {
                    numPersonasInput.setAttribute('max', politicasReserva.max_personas_por_reserva);
                }
            }
        });

