extends ../layout/admin

block contenido
    .mb-8
        h1(class="text-4xl.font-semibold.text-purple-600.mb-2")(style="font-family: 'Playfair Display', serif;") 
            | Configuración de Horarios
        p.text-gray-600.font-light Define los horarios de atención

    .bg-white.rounded-2xl.shadow-lg.p-8.border-2.border-purple-100
        form(method="POST" action="/configuracion/horarios" class="space-y-6")
            input(type="hidden" name="_csrf" value=csrfToken)

            if horarios && horarios.length > 0
                - var diasSemana = ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado']
                each horario in horarios
                    .bg-gradient-to-br.from-purple-50.to-pink-50.rounded-xl.p-6.border-2.border-purple-200
                        .grid.grid-cols-1.md_grid-cols-4.gap-4.items-end
                            div
                                label.block.text-sm.font-medium.text-purple-700.mb-2 Día
                                input.w-full.px-4.py-3.bg-white.border-2.border-purple-200.rounded-lg.font-semibold.text-purple-600(
                                    type="text" 
                                    value=diasSemana[horario.dia_semana]
                                    disabled
                                )
                                input(type="hidden" name=`horarios[${horario.id_horario}][id]` value=horario.id_horario)
                            div
                                label.block.text-sm.font-medium.text-purple-700.mb-2 Apertura
                                input(class="w-full px-4 py-3 border-2 border-purple-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400")(
                                    type="time" 
                                    name=`horarios[${horario.id_horario}][hora_apertura]`
                                    value=horario.hora_apertura
                                )
                            div
                                label.block.text-sm.font-medium.text-purple-700.mb-2 Cierre
                                input(class="w-full px-4 py-3 border-2 border-purple-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400")(
                                    type="time" 
                                    name=`horarios[${horario.id_horario}][hora_cierre]`
                                    value=horario.hora_cierre
                                )
                            div
                                label.block.text-sm.font-medium.text-purple-700.mb-2 Activo
                                select(class="w-full px-4 py-3 border-2 border-purple-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-400")(
                                    name=`horarios[${horario.id_horario}][activo]`
                                )
                                    option(value="true" selected=horario.activo) Sí
                                    option(value="false" selected=!horario.activo) No

            button(class="w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white font-semibold py-4 rounded-xl transition-all duration-300 mt-8 hover:shadow-xl")(type="submit") 
                | Guardar Horarios 
